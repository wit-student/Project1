<body>

    <div class="container">
        <br>
    <h2>AI Cover Letter Generator</h2>

    <form action="/generate-cover-letter" method="POST">
        <label>Company Name:</label>
        <input type="text" name="company"class="form-control" required><br>

        <label>Job Title:</label>
        <input type="text" name="jobTitle"class="form-control" required><br>

        <label>Your Skills:</label>
        <input type="text" name="skills" class="form-control"><br>

        <button type="submit" class="btn btn-success">Generate Cover Letter</button>
    </form>

    <hr>

    <% if (coverLetter) { %>
        <h3>Your AI-Generated Cover Letter:</h3>
            <h2>Generated Text </h2>
            <p  id="coverLetter" ><%-coverLetter.replace(/\n/g, "<br>").replace(/\*\*(.*?)\*\*/g, "<b>$1</b>") %></p>
     
        <button class="btn btn-success" id="downloadPdf">Download as PDF</button>
    <% } %>
</div>
  
<script>

    document.getElementById("downloadPdf")?.addEventListener("click", function () {
        const { jsPDF } = window.jspdf;
        const doc = new jsPDF();
        const coverLetterElement = document.getElementById("coverLetter");

        if (coverLetterElement) {
            const text = coverLetterElement.innerText; // Get full AI response
            const pageWidth = doc.internal.pageSize.getWidth() - 20; // Page width with margins
            const marginTop = 10; // Top margin
            const lineHeight = 10; // Space between lines
            const startX = 10; // Left margin
            let startY = marginTop; // Start position on Y-axis

            const splitText = doc.splitTextToSize(text, pageWidth); // Wrap text
            
            splitText.forEach((line, index) => {
                if (startY + lineHeight > doc.internal.pageSize.getHeight() - 10) {
                    doc.addPage(); // Add new page when text overflows
                    startY = marginTop; // Reset Y position
                }
                doc.text(line, startX, startY);
                startY += lineHeight; // Move to next line
            });

            doc.save("cover-letter.pdf");
        } else {
            alert("Cover letter content not found!");
        }
    });
 

</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

