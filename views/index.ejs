<link rel="stylesheet" href="style.css">

</head>
<body>

    <nav class="navbar navbar-expand-lg bg-body-tertiary  sticky-top">
        <div class="container-fluid">
          <a class="navbar-brand" href="/home" style="color: rgb(10, 105, 53);"> <i class="fa-brands fa-google-play"></i>Riso</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
              <a class="nav-link active" aria-current="page" href="/home">Home</a>
              <a class="nav-link active " href="/generate">Ask Anything</a>
           <%if(user){%>
            <a  class="nav-link active" href="/previous" >Previous</a>  
            <%}%>
            </div>
             <div class="navbar-nav ms-auto">
             <%if(!user){%>
              <a class="nav-link active " href="/login">Login</a>
              <a class="nav-link active " href="/signup">SignUp</a>
             <%}else{%>
      <a class="nav-link active" href="/logout">Logout</a>

            <%}%>
           </div>
         
          </div>
        </div>
      </nav>
   
    <div class="container">
      <br>
      <% if(successMessage ){%>
        <div class="alert alert-success alert-dismissible fade show d-flex justify-content-between align-items-center" role="alert"">
          <div class="mr-3"><%=successMessage %></div>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
   <% }%>
   <% if(errorMessage ){%>
    <div class="alert alert-danger  alert-dismissible fade show d-flex justify-content-between align-items-center" role="alert"" >
     <div class=""><%=errorMessage %></div> 
      <button type="button" class=" btn-close" data-bs-dismiss="alert" aria-label="Close" ></button>
    </div>
<% }%>
    <div class="mb-3">
        <br>
<h1>Ask Anything</h1>
<h4 style="color:blueviolet">ByDefault Prompts</h4>
<br>
<div class="">
<a  class="nav-link active"href="/cover-letter" style="color:rgb(32, 110, 110);font:bold;">
  <button style="color:rgb(40, 137, 137);font:bold">Want Cover Letter!</button>
</a><br>
<a  class="nav-link active"href="refferal-message" ><button style="color:rgb(40, 137, 137);font:bold">Want Refferal Message!</button></a>
</div>  
<br>
<form action="/generate"method="post">
            <label for="" class="form-label"> Enter your prompt</label>
            <textarea name="prompt"  placeholder="Ask Anything ..." class="form-control"required ></textarea>
   
       <br>
       <div class=" show d-flex justify-content-between align-items-center ">
        <button class=" btn btn-success">Generate</button>
        <button id="copyText" class="btn btn-secondary">Copy</button>
       </div>
          
        </form>
    </div>
   
    <% if(info) { %>
        <h3 class="prompt"><%=prompt%></h3>
        <h2>Generated Text </h2>
        <p id="generatedContent"><%-info.replace(/\n/g, "<br>").replace(/\*\*(.*?)\*\*/g, "<b>$1</b>") %></p>
    <% } %>
    
    </div>
   
    <script>
      document.getElementById("copyText").addEventListener("click", function () {
          const text = document.getElementById("generatedContent").innerText;
  
          navigator.clipboard.writeText(text).then(() => {
              alert("Copied to clipboard!");
          }).catch(err => {
              console.error("Failed to copy text: ", err);
          });
      });
  </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>